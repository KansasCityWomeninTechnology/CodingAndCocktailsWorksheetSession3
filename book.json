{
    "root": "./book",
    "structure": {
        "readme": "README.md",
        "summary": "SUMMARY.md"
    },
    "plugins": [
        "custom-favicon",
        "hints",
        "local-video",
        "anchors",
        "codeblock-label",
        "codetabs",
        "simpletabs",
        "terminal"
    ],
    "pluginsConfig": {
        "favicon": "book/assets/favicon.ico",
        "hints": {
            "info": "fa fa-info-circle fa-lg",
            "tip": "fa fa-lightbulb-o fa-lg",
            "danger": "fa fa-exclamation-circle fa-lg",
            "working": "fa fa-question-circle fa-lg"
        },
        "terminal": {
            "copyButtons": true,
            "fade": true,
            "style": "flat"
        }
    }
}